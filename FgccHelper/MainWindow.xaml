<Window x:Class="FgccHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FgccHelper"
        mc:Ignorable="d"
        Title="FgccHelper" Height="720" Width="1280" MinWidth="800" MinHeight="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu Bar -->
            <RowDefinition Height="Auto"/> <!-- 旧的操作区域，现在可能调整或用于其他，或者让内容区直接扩展 -->
            <RowDefinition Height="Auto"/> <!-- 统计卡片区域 -->
            <RowDefinition Height="*"/>    <!-- 详细信息列表区域 -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Margin="0,0,0,5" Background="White">
            <MenuItem Header="文件(_F)">
                <MenuItem x:Name="MenuOpenFolder" Header="打开工程目录(_O)" Click="MenuOpenFolder_Click"/>
                <MenuItem x:Name="MenuOpenFgccFile" Header="打开活字格文件(_F)" Click="MenuOpenFgccFile_Click"/>
                <MenuItem x:Name="MenuOpenGitProject" Header="打开Git项目(_G)" Click="MenuOpenGitProject_Click"/>
                <MenuItem x:Name="MenuRecentProjects" Header="最近打开(_R)" />
                <MenuItem x:Name="MenuExportExcel" Header="导出为Excel(_E)" Click="MenuExportExcel_Click" IsEnabled="False"/>
                <Separator />
                <MenuItem x:Name="MenuExit" Header="退出(_X)" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="选项(_P)">
                <MenuItem x:Name="MenuGitAccountSettings" Header="Git账户配置(_C)" Click="MenuGitAccountSettings_Click"/>
                <MenuItem x:Name="MenuRefresh" Header="刷新(_S)" Click="MenuRefresh_Click" IsEnabled="False"/> <!-- Initial IsEnabled state -->
            </MenuItem>
            <MenuItem Header="帮助(_H)">
                <MenuItem x:Name="MenuAbout" Header="关于(_A)" Click="MenuAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Grid (starts from Grid.Row="1" now if we keep a row for old buttons space, or directly use the space) -->
        <!-- For simplicity, let's assume the content grid now effectively starts below the menu -->
        <!-- We need to adjust the RowDefinitions in MainContentGrid or how it's placed -->
        <Grid x:Name="MainContentGrid" Grid.Row="1" Grid.RowSpan="3">
             <Grid.RowDefinitions>
                <!-- Row 0: 操作区域 (REMOVED) --> 
                <RowDefinition Height="Auto"/> <!-- 统计卡片区域 -->
                <RowDefinition Height="*"/>    <!-- 详细信息列表区域 -->
            </Grid.RowDefinitions>

            <!-- Row 0: 统计项卡片区域 (Adjusted Grid.Row) -->
            <WrapPanel Grid.Row="0" x:Name="StatisticsWrapPanel" Margin="0,10,0,15"> <!-- Added top margin -->
                <!-- 示例卡片，后续将动态生成 -->
                <!--
                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" MinWidth="150">
                    <StackPanel>
                        <TextBlock Text="页面数量" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="[Count]" FontSize="14" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
                -->
            </WrapPanel>

            <!-- Row 1: 详细清单区域 (Adjusted Grid.Row) -->
            <GroupBox Grid.Row="1" Header="详细信息" x:Name="DetailsGroupBox" Margin="0">
                <ListView x:Name="DetailsListView" BorderThickness="0" Margin="0,8,0,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" Width="400"/>
                            <GridViewColumn Header="大小" DisplayMemberBinding="{Binding Size}" Width="120"/>
                            <GridViewColumn Header="类型" DisplayMemberBinding="{Binding FileType}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Loading Overlay Grid -->
        <Grid x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed" Grid.Row="0" Grid.RowSpan="4" Margin="0"> 
            <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" 
                    Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="5" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="处理中，请稍候..." FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <ProgressBar IsIndeterminate="True" Width="250" Height="20"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
